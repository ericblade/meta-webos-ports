From 4945d3a8e7c3f4580288164e5d861cd7825f77c4 Mon Sep 17 00:00:00 2001
From: Herrie <Github.com@herrie.org>
Date: Thu, 19 Oct 2023 20:15:05 +0200
Subject: [PATCH] defaultPreferences.txt: Add keyboard key used by Maliit in
 LuneOS

LuneOS Maliit keyboard  uses custom keyboard settings.

Signed-off-by: Herman van Hazendonk <github.com@herrie.org>
---
 files/conf/defaultPreferences.txt | 12 +++++++++++-
 1 file changed, 11 insertions(+), 1 deletion(-)

diff --git a/files/conf/defaultPreferences.txt b/files/conf/defaultPreferences.txt
index 75521c5..f77cd43 100644
--- a/files/conf/defaultPreferences.txt
+++ b/files/conf/defaultPreferences.txt
@@ -49,6 +49,16 @@
 		},
 		"flashplugins" : true,
 		"click2play" : true,
-		"enableALS": true
+		"enableALS": true,
+		"keyboard": {
+				"activeLanguage": "en",
+				"enabledLanguages": ["en","de","es","fi","fr","ru","sv","ar","cs","da","he","hu","it","nl","pl","pt","zh"],
+				"autoCapitalization": false,
+				"autoCorrection": false,
+				"predictiveText": true,
+				"spellChecking": false,
+				"keyPressFeedback": false,
+				"keyboardSize": "M"
+		}
 	}
 }
